{
  "name": "proxymaster",
  "version": "1.0.0",
  "description": "更强大的Chrome代理管理扩展程序",
  "main": "background.js",
  "scripts": {
    "build": "npm run clean && npm run copy-files && npm run optimize",
    "clean": "rm -rf dist",
    "copy-files": "mkdir -p dist && cp -r *.html *.js *.json icons dist/",
    "optimize": "npm run minify-js && npm run minify-css",
    "minify-js": "terser dist/*.js --compress --mangle -o dist/bundle.js",
    "minify-css": "cleancss -o dist/styles.min.css dist/*.css",
    "dev": "npm run copy-files",
    "test": "jest",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.html *.css",
    "zip": "cd dist && zip -r ../proxymaster-v1.0.0.zip ."
  },
  "keywords": [
    "chrome-extension",
    "proxy",
    "network",
    "privacy",
    "security",
    "vpn",
    "switcher"
  ],
  "author": "ProxyMaster Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "terser": "^5.20.0",
    "clean-css-cli": "^5.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/proxymaster.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/proxymaster/issues"
  },
  "homepage": "https://github.com/your-username/proxymaster#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 